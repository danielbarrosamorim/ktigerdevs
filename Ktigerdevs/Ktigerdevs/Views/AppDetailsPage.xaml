           <Label Text="3 - Microsoft App Center Crashs " HorizontalTextAlignment="Start" FontSize="Large" />
           <Label Text="4 - Newtonsoft Json " HorizontalTextAlignment="Start" FontSize="Large" />

           <Label Margin="0,30,0,0" Text="Next steps for a production app: " HorizontalTextAlignment="Center" FontSize="Large" FontAttributes="Bold"/>

           <Label Text="1 - Load all the characters using pagination " HorizontalTextAlignment="Start" FontSize="Large" />
           <Label Text="1 - Load all the characters using pagination " HorizontalTextAlignment="Start" FontSize="Large" />
           <Label Text="2 - Check for connectivity to avoid error on loading API" HorizontalTextAlignment="Start" FontSize="Large" />
           <Label Text="3 - Check for exceptions" HorizontalTextAlignment="Start" FontSize="Large" />

        </StackLayout> 
    </ContentPage.Content>
